<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sv_login_phone_no_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/login_phone_no_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/dd_dimen_20px"
        android:layout_marginRight="@dimen/dd_dimen_20px"
        android:background="@color/bizbase_comm_bg_color"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_88px"
            android:layout_marginTop="@dimen/dd_dimen_20px" >

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/base_title_back_icon"
                android:paddingLeft="@dimen/dd_dimen_8px"
                android:paddingRight="@dimen/dd_dimen_20px" />

            <TextView
                android:id="@+id/tv_select_city"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dd_dimen_32px"
                android:drawablePadding="@dimen/dd_dimen_10px"
                android:gravity="center"
                android:text="登录"
                android:textColor="@color/bizbase_text_black_title"
                android:textSize="@dimen/dd_dimen_38px"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/login_phone_no_bind_phone_rl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10.0dip"
            android:paddingBottom="10.0dip"
            android:visibility="visible">

            <ImageView
                android:id="@+id/logo_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10.0dip"
                android:src="@mipmap/icon_app_logo" />

            <TextView
                android:id="@+id/bind_phone_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo_iv"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10.0dip"
                android:text="为了您的帐户安全，请绑定手机"
                android:textColor="@color/bizbase_main_color"
                android:textSize="@dimen/dd_dimen_24px"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/login_phone_no_login_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/login_phoneno_user_portrait_iv"
                android:layout_width="@dimen/dd_dimen_160px"
                android:layout_height="@dimen/dd_dimen_160px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40.0dip" />

            <TextView
                android:id="@+id/login_selection_nick_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_phoneno_user_portrait_iv"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dd_dimen_20px"
                android:textColor="@color/bizbase_text_black_title"
                android:textSize="@dimen/dd_dimen_28px" />

            <TextView
                android:id="@+id/login_selection_welcome_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_selection_nick_name_tv"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dd_dimen_10px"
                android:layout_marginBottom="@dimen/dd_dimen_40px"
                android:text="@string/login_welcome_back"
                android:textColor="@color/bizbase_text_black_subtitle"
                android:textSize="@dimen/dd_dimen_26px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_bg_with_corner_6px"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/login_phone_no_select_region_ll"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_160px"
                android:layout_marginLeft="@dimen/dd_dimen_40px"
                android:layout_marginRight="@dimen/dd_dimen_40px">

                <TextView
                    android:id="@+id/login_phone_no_region_label_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="@dimen/dd_dimen_30px"
                    android:gravity="center_vertical"
                    android:text="选择国家/地区"
                    android:textColor="@color/bizbase_text_black_subtitle"
                    android:textSize="@dimen/dd_dimen_28px" />

                <TextView
                    android:id="@+id/login_phone_no_region_warning_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/login_phone_no_region_label_tv"
                    android:layout_alignBottom="@id/login_phone_no_region_label_tv"
                    android:layout_marginLeft="@dimen/dd_dimen_14px"
                    android:layout_toEndOf="@id/login_phone_no_region_label_tv"
                    android:layout_toRightOf="@id/login_phone_no_region_label_tv"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="@string/hint_login_phone_regin_choose"
                    android:textColor="@color/bizbase_warning_color1"
                    android:textSize="@dimen/dd_dimen_20px"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/login_phone_no_region_info_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/login_phone_no_region_label_tv"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="@dimen/dd_dimen_20px"
                    android:gravity="center_vertical"
                    android:text="中国（+86）"
                    android:textColor="@color/bizbase_text_black_title"
                    android:textSize="@dimen/dd_dimen_28px" />

                <ImageView
                    android:layout_width="@dimen/dd_dimen_28px"
                    android:layout_height="@dimen/dd_dimen_28px"
                    android:layout_alignTop="@id/login_phone_no_region_info_tv"
                    android:layout_alignBottom="@id/login_phone_no_region_info_tv"
                    android:layout_alignParentRight="true"
                    android:scaleType="center"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="@dimen/dd_dimen_40px"
                android:layout_marginRight="@dimen/dd_dimen_40px"
                android:background="@color/bizbase_comm_line" />

            <EditText
                android:id="@+id/et_phone_number"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_120px"
                android:layout_marginLeft="@dimen/dd_dimen_40px"
                android:layout_marginRight="@dimen/dd_dimen_40px"
                android:background="@null"
                android:gravity="start|center"
                android:hint="请输入手机号"
                android:inputType="number"
                android:textColor="@color/bizbase_text_black_title"
                android:textColorHint="@color/bizbase_text_black_hint"
                android:textSize="@dimen/dd_dimen_28px" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="@dimen/dd_dimen_40px"
                android:layout_marginRight="@dimen/dd_dimen_40px"
                android:background="@color/bizbase_comm_line" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_120px"
                android:layout_marginLeft="@dimen/dd_dimen_40px"
                android:layout_marginRight="@dimen/dd_dimen_40px"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_auth_code"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:gravity="start|center"
                    android:hint="请输入手机验证码"
                    android:inputType="number"
                    android:textColor="@color/bizbase_text_black_title"
                    android:textColorHint="@color/bizbase_text_black_hint"
                    android:textSize="@dimen/dd_dimen_28px" />

                <TextView
                    android:id="@+id/tv_req_auth_code"
                    android:layout_width="100.0dip"
                    android:layout_height="fill_parent"
                    android:enabled="false"
                    android:gravity="center|right"
                    android:text="获取验证码"
                    android:textColor="@drawable/login_auth_code_color_selector"
                    android:textSize="@dimen/dd_dimen_26px" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/dd_dimen_30px"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_login_phone_scheme_accept"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="center_vertical"
                android:paddingTop="@dimen/dd_dimen_32px"
                android:paddingBottom="@dimen/dd_dimen_32px"
                android:src="@drawable/icon_login_phone_scheme_accept" />

            <TextView
                android:id="@+id/service_clause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:lineSpacingExtra="@dimen/dd_dimen_4px"
                android:textColor="@color/bizbase_text_black_subtitle"
                android:text="已阅读同意《用户协议》《支付协议》《隐私权政策》"
                android:textSize="@dimen/dd_dimen_24px" />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_84px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dd_dimen_30px"
            android:background="@drawable/bizbase_main_btn_big_selector"
            android:enabled="false"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/bizbase_white"
            android:textSize="@dimen/dd_dimen_32px" />
    </LinearLayout>
</ScrollView>